<%= form_for([@butterfly.checklist, @butterfly]) do |f| %>
  <% if @butterfly.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@butterfly.errors.count, "error") %> prohibited this butterfly from being saved:</h2>

      <ul>
